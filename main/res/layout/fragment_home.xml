<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RL_Home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightWhite"
    >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="560dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Hello,"
            android:textColor="@color/colorBlack"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="@color/colorLightWhite"
            android:gravity="bottom"
            android:text="xxx"
            android:textColor="@color/colorBlack"
            android:textSize="35sp"
            android:textStyle="bold" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_main_bottom"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="13dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_input_words"
            android:layout_width="wrap_content"
            android:layout_height="149dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="66dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="65dp"
            app:cardBackgroundColor="@color/colorGrey"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:id="@+id/RL_input_words"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="177dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_Input_words"
                        android:layout_width="75dp"
                        android:layout_height="64dp"
                        android:padding="4dp"
                        android:src="@drawable/icon_add" />

                    <TextView
                        android:id="@+id/txt_input_word"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="录入单词"
                        android:textColor="@color/colorMainFont"
                        android:textSize="24sp" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="92dp"
            android:layout_above="@+id/card_unordered_start"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="268dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="35dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_search_words"
                android:layout_width="165dp"

                android:layout_height="75dp"
                android:layout_marginEnd="42dp"
                android:forceHasOverlappingRendering="false"
                app:cardBackgroundColor="@color/colorBgWhite"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:id="@+id/RL_search_words"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="132dp"
                        android:layout_height="65dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_recite_word"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="4dp"
                            android:src="@drawable/icon_search_black" />

                        <TextView
                            android:id="@+id/txt_search_word"
                            android:layout_width="132dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="搜索"
                            android:textColor="@color/colorBlack"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_review_words"
                android:layout_width="165dp"
                android:layout_height="75dp"
                app:cardBackgroundColor="@color/colorBgOrange"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:id="@+id/RL_review_words"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    tools:ignore="DuplicateIds">

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="58dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_review_word"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="4dp"
                            android:src="@drawable/icon_word_book" />

                        <TextView
                            android:id="@+id/txt_review_word"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="复习"
                            android:textColor="@color/colorMainFont"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_unordered_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="50dp"
            app:cardBackgroundColor="@color/colorLightBlue"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/text_unordered_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="开   始   背   单   词"
                android:textColor="@color/colorFontInBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>