<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset_username"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorLittleWhite"
    tools:context="cn.edu.appenglistlearning.ActivityChangeInfo">

    <EditText
        android:id="@+id/resetusername_et"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="请输入用户名"
        android:paddingLeft="10dp"
        android:textColor="#2B2B2B"
        android:textColorHint="#000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/resetuserpassword_et"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="请输入旧密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/resetuserpassword_et2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="16sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_change_words"
        android:layout_width="160dp"

        android:layout_height="76dp"
        android:layout_marginTop="40dp"
        android:forceHasOverlappingRendering="false"
        app:cardBackgroundColor="@color/colorBgWhite"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_chinese"
        app:layout_constraintVertical_bias="0.3">

        <RelativeLayout
            android:id="@+id/RL_change_words"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_change_word"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:padding="4dp"
                    android:src="@mipmap/icon_savename" />

                <TextView
                    android:id="@+id/txt_change_info"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="@color/colorBlack"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
